{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "traceResolution": false,
    "rootDir": ".",
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ES2017",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}