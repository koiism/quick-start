{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": ".",
    "rootDir": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@/server/*": [
        "../server/src/*"
      ],
      "@/server": [
        "../server/src"
      ],
      "@/pages/*": [
        "./src/pages/*"
      ],
      "@/pages": [
        "./src/pages"
      ],
      "@/queries/*": [
        "./src/queries/*"
      ],
      "@/queries": [
        "./src/queries"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/components": [
        "./src/components"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@/utils": [
        "./src/utils"
      ],
      "@/stores/*": [
        "./src/stores/*"
      ],
      "@/stores": [
        "./src/stores"
      ],
    },
  },
  "include": [
    "./src",
    "./types",
    "components.d.ts"
  ],
  "references": [
    {
      "path": "../server/tsconfig.json"
    }
  ],
  "compileOnSave": false
}